<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".Slideshow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@drawable/btn_title"
                android:fontFamily="cursive"
                android:gravity="center"
                android:padding="17sp"
                android:text="~ Slide Show ~"
                android:textColor="#000000"
                android:textSize="42sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/btn_title2"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="10sp"
            android:text="~ Edit Data ~"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/btn_form2"
            android:orientation="vertical"
            android:padding="20sp">

        <EditText
            android:id="@+id/idslide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30px"
            android:layout_marginBottom="15dp"
            android:hint="ID Slide Show"
            android:inputType="number"
            android:background="@drawable/btn_edit"
            android:textColorHint="#9A9A9A"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30px"
            android:layout_marginBottom="15dp"
            android:hint="Judul Slide Show"
            android:background="@drawable/btn_edit"
            android:textColorHint="#9A9A9A"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/editText14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30px"
            android:layout_marginBottom="15dp"
            android:hint="URL Slide Show"
            android:background="@drawable/btn_edit"
            android:textColorHint="#9A9A9A"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnSimpan5"
            android:background="@drawable/btn_save"
            android:layout_width="400px"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Perbarui" />

        </LinearLayout>

        <Button
            android:id="@+id/back5"
            android:textColor="#000000"
            android:background="@drawable/btn_rounds"
            android:layout_margin="20dp"
            android:layout_width="500px"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kembali ke Menu" />

    </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>